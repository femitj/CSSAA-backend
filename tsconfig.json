{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts",
    "src/config/config.js" /* Include every ts file in source folder */
  ],
  "exclude": ["node_modules" /* exclude everything in  node_modules */]
}
